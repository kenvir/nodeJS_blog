<div class="mt-4">
  <h3 class="text-center">POST COURSE</h3>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="name" class="form-label fw-medium"> Course Name </label>
      <input type="text" class="form-control" id="name" name="name" />
    </div>
    <div class="form-group">
      <label for="description" class="form-label fw-medium"> Description </label>
      <input type="text" class="form-control" id="description" name="description" />
    </div>
    <div class="form-group">
      <label for="videoId" class="form-label fw-medium"> Video ID </label>
      <input type="text" class="form-control" id="videoId" name="videoId" />
    </div>
    <div class="form-group">
      <label for="level" class="form-label fw-medium"> Level </label>
      <input type="text" class="form-control" id="level" name="level" />
    </div>
    <button type="submit" class="btn btn-primary mt-4">ADD COURSE</button>
  </form>
</div>
